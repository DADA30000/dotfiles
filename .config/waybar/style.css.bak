@keyframes workspacesanim {
    0% {
        background: linear-gradient(to bottom, #333 20px, @accent 20px);
    }
    10% {
        background: linear-gradient(to bottom, #333 18px, @accent 18px);
    }
    20% {
        background: linear-gradient(to bottom, #333 16px, @accent 16px);
    }
    30% {
        background: linear-gradient(to bottom, #333 14px, @accent 14px);
    }
    40% {
        background: linear-gradient(to bottom, #333 12px, @accent 12px);
    }
    50% {
        background: linear-gradient(to bottom, #333 10px, @accent 10px);
    }
    60% {
        background: linear-gradient(to bottom, #333 8px, @accent 8px);
    }
    70% {
        background: linear-gradient(to bottom, #333 6px, @accent 6px);
    }
    80% {
        background: linear-gradient(to bottom, #333 4px, @accent 4px);
    }
    90% {
        background: linear-gradient(to bottom, #333 2px, @accent 2px);
    }
    100% {
        background: linear-gradient(to bottom, #333 0px, @accent 0px);
    }
}
@keyframes workspaceshover {
	0% {
        background: linear-gradient(to bottom, #333 20px, @accent 20px);
    }
    50% {
        background: linear-gradient(to bottom, #333 19px, @accent 19px);
    }
    100% {
        background: linear-gradient(to bottom, #333 18px, @accent 18px);
    }
}
#workspaces button label {
  font-family: "JetBrainsMono NF Thin";
}
#workspaces button.urgent {
  background-color: #3275a8;
}
#workspaces button:nth-child(1) {
  border-radius: 10px 0 0 10px;
}
#workspaces button:nth-child(10) {
  border-radius: 0 10px 10px 0;
}
#workspaces button {
  padding: 0px 10px;
  margin: 4px 0px;
  background-color: #333;
  border-radius: 0;
}
#workspaces button:hover {
  animation-duration: 500ms;
  animation-fill-mode: both;
  animation-name: workspaceshover;
}
#workspaces button.active {
  animation-name: workspacesanim;
  animation-duration: 300ms;
  animation-direction: alternate;
  background-color: @accent;

}

