#!/usr/bin/env bash
waybar_tooltip()
{
    echo "$1" | while read -r line; do
        count="${#line}"
        [ "$count" -lt 69 ] && line="${line}$(printf "%$((69 - count))s")"
        printf '%s' "$line "
    done
}

text="<span color='#4575DA'>ïŒƒ </span>"
tooltip_msg="$(paleofetch)"

printf "{ \"text\": \"%s\", \"tooltip\": \"%s\" }\n" \
       "$text" "$(waybar_tooltip "$tooltip_msg")" 
